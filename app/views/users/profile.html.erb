<div class="patient-first_name">
  <div class="d-flex">
    <%= link_to users_path do %>
      <i class="fa-solid fa-arrow-left me-2"></i>
    <% end %>
    <h1><%= @patient.first_name %> <%= @patient.last_name %></h1>
  </div>

  <p><strong>CEP:</strong> <%= @patient.registration_number %></p>
  <p><strong>Data de Nascimento:</strong> <%= @patient.birth_date %></p>

  <%= link_to "Aplicar Novo Instrumento em #{@patient.first_name}", new_user_applied_instrument_path(@patient) %>

  <h3>Instrumentos Aplicados:</h3>

  <div class="instrument-grid-wrapper">
    <% @patient.applied_instruments.each_with_index do |applied_instrument, index| %>
      <%= link_to applied_instrument_path(applied_instrument) do%>
        <div class="instrument-grid-item"><%= applied_instrument.instrument.title %></div>
      <% end %>
      <div class="instrument-grid-item"><%= translate_status(applied_instrument.status) %></div>
    <% end %>
  </div>
</div>
