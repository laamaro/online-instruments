<div class="container list">
  <div class="d-flex">
    <h1>Confirme sua senha</h1>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :invitation_token %>

    <div class="form-inputs">
      <%= f.input :password, label: 'Senha' %>
      <%= f.input :password_confirmation, label: 'Confirmação de Senha' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Aceitar convite', class: 'btn-form px-5' %>
    </div>
  <% end %>
</div>
