<div class="container list">
  <div class="d-flex">
    <h1>Log in</h1>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: 'form mb-2' } ) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn-form px-5' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
